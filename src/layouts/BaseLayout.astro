---
import '../styles/global.css'
import Footer from '../components/Footer.astro'
import Header from '../components/Header.tsx'
import CONFIG from '../config/conf'

//const siteName = 'YINI'
const {
    headTitle, // optional per-page
    headDescription,
} = Astro.props

const postTitle = 'A Minimal, Human-Readable Configuration Format'
const htmlTitle = `${headTitle} Â· ${postTitle}`
---

<html lang="en" class="scroll-smooth">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />

        <title>{htmlTitle}</title>
        <meta name="description" content={headDescription} />
        <meta name="author" content={CONFIG.meta.author} />

        <!-- Favicons -->
        <link rel="icon" href="/favicon.ico" sizes="any" />

        <!-- PNG fallbacks -->
        <link
            rel="icon"
            type="image/png"
            sizes="16x16"
            href="/favicon-16.png"
        />
        <link
            rel="icon"
            type="image/png"
            sizes="32x32"
            href="/favicon-32.png"
        />

        <!-- High-res icons (useful for PWA/Android, even without a manifest) -->
        <link
            rel="icon"
            type="image/png"
            sizes="192x192"
            href="/favicon-192.png"
        />
        <link
            rel="icon"
            type="image/png"
            sizes="512x512"
            href="/favicon-512.png"
        />

        <!-- Apple iOS -->
        <link rel="apple-touch-icon" href="/apple-touch-icon.png" />

        <!-- Optional theme colors -->
        <meta name="theme-color" content="#111827" />
        <meta name="msapplication-TileColor" content="#111827" />

        <style>
            body {
                font:
                    16px/1.6 system-ui,
                    -apple-system,
                    Segoe UI,
                    Roboto,
                    sans-serif;
                margin: 2rem auto;
                max-width: 800px;
                padding: 0 1rem;
            }
            nav a {
                margin-right: 1rem;
            }
        </style>

        <script type="application/ld+json">
            {
                "@context": "https://schema.org",
                "@type": "SoftwareApplication",
                "name": "YINI Configuration Format",
                "applicationCategory": "DeveloperTool",
                "description": "YINI is an INI-inspired configuration language with clear nesting, comments, and a formal specification.",
                "programmingLanguage": "YINI",
                "url": "https://yini-lang.org"
            }
        </script>
    </head>

    <body>
        <!-- <body
        class="bg-white text-slate-900 transition-colors dark:bg-slate-950 dark:text-slate-100"
        > -->
        <!-- React header -->
        <Header client:idle />

        <!-- Main -->
        <main class="mx-auto max-w-3xl px-4 py-10">
            <article class="prose prose-slate dark:prose-invert max-w-none">
                <slot />
            </article>
        </main>

        <footer class="mx-auto max-w-6xl px-4 py-8 text-center">
            <a href="#top">Back to top </a>
        </footer>
        <Footer />
    </body>
</html>
