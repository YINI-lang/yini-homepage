---
import '../styles/global.css'

//const siteName = 'YINI'
const {
    headTitle, // optional per-page
    headDescription,
} = Astro.props

const postTitle = 'A Minimal, Human-Readable Configuration Format'
const htmlTitle = `${headTitle} · ${postTitle}`
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />

        <title>{htmlTitle}</title>
        <meta name="description" content={headDescription} />

        <!-- Favicons -->
        <link rel="icon" href="/favicon.ico" sizes="any" />

        <!-- PNG fallbacks -->
        <link
            rel="icon"
            type="image/png"
            sizes="16x16"
            href="/favicon-16.png"
        />
        <link
            rel="icon"
            type="image/png"
            sizes="32x32"
            href="/favicon-32.png"
        />

        <!-- High-res icons (useful for PWA/Android, even without a manifest) -->
        <link
            rel="icon"
            type="image/png"
            sizes="192x192"
            href="/favicon-192.png"
        />
        <link
            rel="icon"
            type="image/png"
            sizes="512x512"
            href="/favicon-512.png"
        />

        <!-- Apple iOS -->
        <link rel="apple-touch-icon" href="/apple-touch-icon.png" />

        <!-- Optional theme colors -->
        <meta name="theme-color" content="#111827" />
        <meta name="msapplication-TileColor" content="#111827" />

        <style>
            body {
                font:
                    16px/1.6 system-ui,
                    -apple-system,
                    Segoe UI,
                    Roboto,
                    sans-serif;
                margin: 2rem auto;
                max-width: 800px;
                padding: 0 1rem;
            }
            nav a {
                margin-right: 1rem;
            }
        </style>
    </head>
    <body>
        <!-- Header -->
        <header class="site-header text-center">
            <a href="/" aria-label="YINI home" class="logo m-1"
                ><img
                    class="mx-auto block h-1/3 w-1/3 pr-14.5"
                    src="/gfx/YINI-logo-cyan-on-white.png"
                    alt="YINI logo"
                /></a
            >
            <nav>
                <a href="/">Home</a>
                <a href="/get-started">Get Started</a>
                <!-- !!Temp disabled <a href="/playground">Playground</a> -->
                <a href="/yini-tutorial">Quick Tutorial</a>
                <a href="/yini-faq">FAQ</a>
                <a
                    href="/specs/YINI-Specification-1.0.0-RC.3.pdf"
                    target="_blank">Spec ↗</a
                >
            </nav>
        </header>

        <!-- Main -->
        <main class="mx-auto max-w-3xl px-4 py-10">
            <article class="prose prose-slate dark:prose-invert max-w-none">
                <slot />
            </article>
        </main>

        <!-- Footer (dark) -->
        <footer class="mt-16 bg-slate-900 text-slate-300">
            <div class="mx-auto max-w-6xl px-4 py-10">
                <div class="grid grid-cols-1 gap-8 md:grid-cols-3">
                    <!-- Brand / Tagline -->
                    <div>
                        <a
                            href="/"
                            aria-label="YINI home"
                            class="inline-flex items-center gap-2 no-underline"
                        >
                            <img
                                src="/gfx/YINI-logo-cyan-on-white.png"
                                alt="YINI logo"
                                class="h-7 w-auto"
                                loading="lazy"
                            />
                            <span class="sr-only">YINI</span>
                        </a>
                        <p class="mt-3 text-sm text-slate-400">
                            INI-familiar syntax with nesting, comments, and
                            clear rules.
                        </p>
                    </div>

                    <!-- Left Column -->
                    <div>
                        <!-- Use it -->
                        <h2 class="text-slate-2 00 text-sm font-semibold">
                            Use it
                        </h2>
                        <ul class="mt-3 space-y-2 text-sm">
                            <li>
                                <a
                                    href="https://www.npmjs.com/package/yini-cli"
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="text-slate-300 no-underline hover:text-sky-300 hover:underline"
                                    >YINI CLI on npm ↗</a
                                >
                            </li>
                            <li>
                                <a
                                    href="https://www.npmjs.com/package/yini-parser"
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="text-slate-300 no-underline hover:text-sky-300 hover:underline"
                                    >YINI Parser on npm ↗</a
                                >
                            </li>
                        </ul>

                        <br />

                        <!-- Quick links -->
                        <h2 class="text-sm font-semibold text-slate-200">
                            Quick links
                        </h2>
                        <ul class="mt-3 space-y-2 text-sm">
                            <li>
                                <a
                                    href="/get-started"
                                    class="text-slate-300 no-underline hover:text-sky-300 hover:underline"
                                    >Get Started</a
                                >
                            </li>
                            <!-- !!Temp disabled <li>
                                <a
                                    href="/playground"
                                    class="text-slate-300 no-underline hover:text-sky-300 hover:underline"
                                    >Playground</a
                                >
                            </li> -->
                            <li>
                                <a
                                    href="/yini-tutorial"
                                    class="text-slate-300 no-underline hover:text-sky-300 hover:underline"
                                    >Quick Tutorial</a
                                >
                            </li>
                            <li>
                                <a
                                    href="/yini-faq"
                                    class="text-slate-300 no-underline hover:text-sky-300 hover:underline"
                                    >FAQ</a
                                >
                            </li>
                            <li>
                                <a
                                    href="/specs/YINI-Specification-1.0.0-RC.3.pdf"
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="text-slate-300 no-underline hover:text-sky-300 hover:underline"
                                    >YINI-Specification ↗</a
                                >
                            </li>
                            <li>
                                <a
                                    href="/about-yini"
                                    class="text-slate-300 no-underline hover:text-sky-300 hover:underline"
                                    >About</a
                                >
                            </li>
                        </ul>
                    </div>

                    <!-- Right Column -->
                    <div>
                        <!-- Community / Repos -->
                        <h2 class="text-slate-2 00 text-sm font-semibold">
                            Community
                        </h2>
                        <ul class="mt-3 space-y-2 text-sm">
                            <li>
                                <a
                                    href="https://github.com/YINI-lang/yini-cli"
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="text-slate-300 no-underline hover:text-sky-300 hover:underline"
                                    >GitHub: yini-cli ↗</a
                                >
                            </li>
                            <li>
                                <a
                                    href="https://github.com/YINI-lang/yini-parser-typescript"
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="text-slate-300 no-underline hover:text-sky-300 hover:underline"
                                    >GitHub: yini-parser ↗</a
                                >
                            </li>
                            <li>
                                <a
                                    href="https://github.com/YINI-lang/YINI-spec"
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="text-slate-300 no-underline hover:text-sky-300 hover:underline"
                                    >GitHub: yini-spec ↗</a
                                >
                            </li>

                            <br />

                            <!-- Deep dive -->
                            <h2 class="text-slate-2 00 text-sm font-semibold">
                                Deep dive
                            </h2>
                            <ul class="mt-3 space-y-2 text-sm">
                                <li>
                                    <a
                                        href="https://github.com/YINI-lang/YINI-spec/blob/production/YINI-Specification.md#table-of-contents"
                                        target="_blank"
                                        rel="noopener noreferrer"
                                        class="text-slate-300 no-underline hover:text-sky-300 hover:underline"
                                        >Read latest YINI Spec ↗</a
                                    >
                                </li>
                                <li>
                                    <a
                                        href="https://github.com/YINI-lang/YINI-spec/blob/production/RATIONALE.md"
                                        target="_blank"
                                        rel="noopener noreferrer"
                                        class="text-slate-300 no-underline hover:text-sky-300 hover:underline"
                                        >Why YINI? (Project Rationale) ↗</a
                                    >
                                </li>
                            </ul>
                        </ul>
                    </div>
                </div>

                <!-- Bottom line -->
                <div
                    class="mt-10 border-t border-slate-800 pt-6 text-xs text-slate-400"
                >
                    <div
                        class="flex flex-col items-center justify-between gap-3 md:flex-row"
                    >
                        <!--div>© 2025 YINI contributors</div-->
                        <div>© 2025 YINI Config Format</div>
                        <div class="flex items-center gap-4">
                            <a
                                href="https://github.com/YINI-lang"
                                target="_blank"
                                rel="noopener noreferrer"
                                class="text-slate-400 no-underline hover:text-sky-300 hover:underline"
                                >YINI Project on GitHub ↗</a
                            >
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </body>
</html>
